@model WebShop.Models.Car.CarViewModel


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Moodel" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Moodel" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Price" class="form-control" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Amount" class="form-control" rows="5"></textarea>
            </div>
        </div>

        @*@if (Model.Id.HasValue)
